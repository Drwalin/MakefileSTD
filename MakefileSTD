
ifeq ($(platform),)
	shellstd = posix
	platform = unix
	
	ifeq ($(shell uname -a),)
		shellstd = win
		platform = win
	else ifneq ($(findstring Darwin,$(shell uname -a)),)
		shellstd = posix
		platform = osx
	else ifneq ($(findstring MINGW,$(shell uname -a)),)
		shellstd = posix
		platform = win
	else ifeq ($(SHELL),cmd)
		platform = win
		shellstd = win
	else ifneq ($(findstring MSYS,$(shell uname -a)),)
		shellstd = posix
		platform = win
	else ifeq ($(OS),Windows_NT)
		platform = win
		shellstd = win
	endif
endif

ifeq ($(shellstd),posix)
	RM = rm -f
	MD = mkdir
	CP = cp -r
	S = /
else
	RM = del /f
	MD = md
	CP = cp
	S =\\
endif

ifneq ($(platform),win)
	SHARED_EXT =.so
	EXEC_EXT =
else
	SHARED_EXT =.dll
	EXEC_EXT =.exe
endif

